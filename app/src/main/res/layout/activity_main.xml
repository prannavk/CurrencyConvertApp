<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_goldenrod_yellow"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView9_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Currency Convertor Project"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9_title"
        app:srcCompat="@drawable/icons_currency_64" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/main_card"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:text="Please Scroll Down"

        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:id="@+id/main_card"
        android:orientation="vertical"
        app:cardCornerRadius="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:backgroundTint="@color/ghost_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:text="Pick - Convert From Currency"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="normal"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button1211"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:text="Pick"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_press_2"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:textStyle="normal"
                    android:textAlignment="gravity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Currency Picked - "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/button1211"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick - Convert To Currency"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="normal"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                  <Button
                    android:id="@+id/button2112"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Pick"
                    android:background="@drawable/btn_press_2"
                    android:fontFamily="@font/poppins_regular"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textAlignment="gravity"
                   android:layout_marginStart="36dp"
                   app:layout_constraintTop_toBottomOf="@+id/textView3"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />

                  <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Currency Picked -"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button2112"
                    tools:ignore="HardcodedText" />

                  <Button
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button121132"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ins_conv_rate"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/btn_press_2"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:text="Display Conversion Rate"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ins_conv_rate"
                    android:text="Note before you click the button below: \n-Long press the button below for objective toast\n-converted amounts displayed will be rounded off\nto 2 decimal places"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView8"
                    app:layout_constraintBottom_toTopOf="@id/button121132"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText" />

                  <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Enter Exchange Amount"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button121132"
                    tools:ignore="HardcodedText" />

                  <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/exchange_logo"
                    app:srcCompat="@drawable/exchange_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textView4"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintTop_toBottomOf="@id/button121132"/>

                  <EditText
                    android:id="@+id/editTextNumberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Value"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                      android:layout_marginStart="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Convert"
                    android:textAllCaps="true"
                    android:background="@drawable/btn_press_2"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
                    tools:ignore="HardcodedText" />

               <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginBottom="72dp"
                   android:layout_marginTop="40dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Converted Stats shown below: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/button3"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/conversion_stats_layout_ll"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/ghost_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView5">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="normal"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="36dp"
                        android:padding="10dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView7776"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="36dp"
                        android:padding="10dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView77756"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="36dp"
                        android:padding="10dp"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/clear_ll_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="clear"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/goldenrod"
                        android:textSize="14sp"
                        android:visibility="invisible"
                        android:background="@drawable/blue_border_rounded_cornwe"
                        android:backgroundTint="@color/white_smoke"
                        tools:ignore="HardcodedText" />

                </LinearLayout>


                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginBottom="16dp"
                    android:text="About"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_press_2"
                    android:backgroundTint="@color/light_goldenrod_yellow"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintTop_toBottomOf="@id/conversion_stats_layout_ll"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>