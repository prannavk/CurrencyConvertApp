<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_goldenrod_yellow"
    tools:context=".AboutActivity_1">

    <TextView
        android:id="@+id/about_page_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="About Us and References"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/about_container"
        app:layout_constraintTop_toBottomOf="@id/about_page_heading"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/about_image"
            app:srcCompat="@drawable/email"
            android:src="@drawable/email"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_by"
                android:text="By: Krishna Pranav"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textAllCaps="false"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_by_roll"
                android:text="18311A05L7"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textAllCaps="true"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="queries: krishnapk808@gmail.com"
        android:textColor="@color/gray"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="normal"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_container"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_key_fcc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Free Currency Converter API"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:drawableEnd="@drawable/password"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:backgroundTint="@color/alice_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_share_fb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Share on Facebook"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:drawableEnd="@drawable/fb"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:backgroundTint="@color/alice_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_key_fcc"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button23cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="List Of countries"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAlignment="center"
        android:padding="12dp"
        android:textAllCaps="false"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:backgroundTint="@color/alice_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_share_fb"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>